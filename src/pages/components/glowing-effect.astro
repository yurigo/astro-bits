---
import GridItem from "@components/components/GridItem.astro";
import Box from "@components/components/icons/Box.astro";
import LayoutExample from "@layouts/LayoutExample.astro";

// ("use client");
// import { Box, Lock, Search, Settings, Sparkles } from "lucide-react";
// import { GlowingEffect } from "@/components/ui/glowing-effect";
---

<LayoutExample title="Glowing effect">
  <div class="container mx-auto p-4 my-40">
    <h1>Glowing effect</h1>

    <ul
      class="grid grid-cols-1 my-10
      grid-rows-none gap-4 md:grid-cols-12 md:grid-rows-3 lg:gap-4 xl:max-h-[34rem] xl:grid-rows-2"
    >
      <GridItem
        area="md:[grid-area:1/1/2/7] xl:[grid-area:1/1/2/5]"
        title="Do things the right way"
      >
        <Box slot="icon" className="h-4 w-4 text-black dark:text-neutral-400" />
        <Fragment slot="description">
          Running out of copy so I'll write anything.
        </Fragment>
      </GridItem>
      <GridItem
        area="md:[grid-area:1/7/2/13] xl:[grid-area:2/1/3/5]"
        title="The best AI code editor ever."
      >
        <Box slot="icon" className="h-4 w-4 text-black dark:text-neutral-400" />
        <Fragment slot="description">
          Yes, it's true. I'm not even kidding. Ask my mom if you don't believe
          me.
        </Fragment>
      </GridItem>
      <GridItem
        area="md:[grid-area:2/1/3/7] xl:[grid-area:1/5/3/8]"
        title="You should buy Aceternity UI Pro"
      >
        <Box slot="icon" className="h-4 w-4 text-black dark:text-neutral-400" />
        <Fragment slot="description">
          It's the best money you'll ever spend
        </Fragment>
      </GridItem>
      <GridItem
        area="md:[grid-area:2/7/3/13] xl:[grid-area:1/8/2/13]"
        title="This card is also built by Cursor"
      >
        <Box slot="icon" className="h-4 w-4 text-black dark:text-neutral-400" />
        <Fragment slot="description">
          I'm not even kidding. Ask my mom if you don't believe me.
        </Fragment>
      </GridItem>
      <GridItem
        area="md:[grid-area:3/1/4/13] xl:[grid-area:2/8/3/13]"
        title="Coming soon on Aceternity UI"
      >
        <Box slot="icon" className="h-4 w-4 text-black dark:text-neutral-400" />
        <Fragment slot="description">
          I'm writing the code as I record this, no shit.
        </Fragment>
      </GridItem>
    </ul>
  </div>
</LayoutExample>
