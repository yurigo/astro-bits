---
import Particles from "@components/backgrounds/Particles.astro";
import Button from "@components/Button.astro";
import BackIcon from "@components/icons/BackIcon.astro";
import LayoutExample from "@layouts/LayoutExample.astro";
---

<LayoutExample title="Particles">
  <div class="absolute top-0 left-0 w-full h-full z-0 bg-black">
    <Particles
      particleColors={["#ffffff", "#ff0000", "#00ff00", "#00d8ff", "#ff00ff"]}
      particleCount={1000}
      particleSpread={7}
      speed={0.05}
      particleBaseSize={100}
      moveParticlesOnHover={true}
      alphaParticles={true}
      disableRotation={true}
    />
  </div>

  <div
    class="relative grow flex flex-col items-center justify-center min-w-full min-h-full text-white z-10 pointer-events-none"
  >
    <h1>Particles</h1>
    <Button class="mt-6 pointer-events-auto" onclick="window.location='/'"
      ><BackIcon /></Button
    >
  </div>
</LayoutExample>
