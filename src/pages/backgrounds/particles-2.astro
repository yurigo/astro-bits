---
import Particles from "@components/backgrounds/Particles.astro";
import ButtonParticles from "@components/core/ButtonParticles.astro";
import BackIcon from "@components/icons/BackIcon.astro";
import LayoutExample from "@layouts/LayoutExample.astro";
---

<LayoutExample title="Particles II">
  <div class="absolute top-0 left-0 w-full h-full z-0 bg-black">
    <Particles
      particleColors={[
        "#ff0000",
        "#00ff00",
        "#0000ff",
        "#ff00ff",
        "#00ffff",
        "#ffff00",
      ]}
      particleCount={5000}
      particleSpread={7}
      speed={0.03}
      particleBaseSize={10}
      moveParticlesOnHover={false}
      alphaParticles={true}
      disableRotation={false}
    />
  </div>

  <div
    class="relative grow flex flex-col items-center justify-center min-w-full min-h-full text-white z-10 pointer-events-none"
  >
    <h1>Particles II</h1>
    <ButtonParticles
      hue-color={200}
      hue-animation-duration={12}
      class="mt-6 pointer-events-auto"
      onclick="window.location='/'"
    >
      <BackIcon />
    </ButtonParticles>
  </div>
</LayoutExample>
