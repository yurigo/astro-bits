---
import GradientText from "@components/text-animations/GradientText.astro";
import Button from "@components/core/Button.astro";
import BackIcon from "@components/icons/BackIcon.astro";
import LayoutExample from "@layouts/LayoutExample.astro";
---

<LayoutExample title="Gradient Text">
  <div class="absolute top-0 left-0 w-full h-full z-0 bg-black"></div>
  <div
    class="relative grow flex flex-col items-center justify-center w-full h-full text-white z-10"
  >
    <GradientText
      class="p-5 m-3"
      animationSpeed={8.0}
      colors={["#DE3163", "#CCCCFF", "#FFBF00"]}
    >
      Lorem ipsum dolor sit amet.
    </GradientText>
    <GradientText
      class="p-5 m-3"
      animationSpeed={2.0}
      colors={["#995533", "#DE3163", "#40ffaa"]}
    >
      Lorem ipsum dolor sit amet consectetur.
    </GradientText>
    <GradientText
      class="p-5 m-3"
      animationSpeed={3.0}
      colors={["#40ffaa", "#CCCCFF", "#FFBF00"]}
    >
      Lorem ipsum dolor sit.
    </GradientText>
    <GradientText
      class="p-5 m-3"
      animationSpeed={4.0}
      colors={["#995533", "#DE3163", "#40ffaa"]}
    >
      Lorem ipsum dolor sit amet.
    </GradientText>

    <Button class="mt-6 pointer-events-auto" onclick="window.location='/'"
      ><BackIcon /></Button
    >
  </div>
</LayoutExample>
